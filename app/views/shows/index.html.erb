<h1 class="mb-4">Shows for <%= @movie.title %></h1>

<% if @shows.any? %>
  <table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
      <tr>
        <th>Theatre</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Price (₹)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @shows.each do |show| %>
        <tr>
          <td><%= show.theatre.name %> (<%= show.theatre.location %>)</td>
          <td><%= show.start_time.strftime("%d %b %Y %I:%M %p") %></td>
          <td><%= show.end_time.strftime("%d %b %Y %I:%M %p") %></td>
          <td><%= number_to_currency(show.ticket_price, unit: "₹") %></td>
          <td>
            <%= link_to "View Seats", movie_show_path(@movie, show), class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_movie_show_path(@movie, show), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", movie_show_path(@movie, show),
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete this show?" },
                        class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-muted text-center">No shows available for this movie.</p>
<% end %>

<div class="mt-3">
  <%= link_to "Add New Show", new_movie_show_path(@movie), class: "btn btn-success me-2" %>
  <%= link_to "Back to Movies", movies_path, class: "btn btn-secondary" %>
</div>
