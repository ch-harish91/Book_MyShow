<!DOCTYPE html>
<html>
  <head>
    <title>BookMyShow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Rails stylesheets -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- Importmap JavaScript -->
    <%= javascript_importmap_tags %>

    <style>
      /* Flash messages styling */
      .flash {
        padding: 10px 15px;
        margin: 10px 0;
        border-radius: 5px;
        font-weight: bold;
        color: #fff;
      }
      .flash.notice { background-color: #28a745; } /* green */
      .flash.alert { background-color: #dc3545; }  /* red */
    </style>
  </head>

  <body class="container mt-4">
    <!-- Header / Navbar -->
    <header class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="h5">BookMyShow</h2>
      </div>

      <div>
        <% if user_signed_in? %>
          <span class="me-2">Hi, <%= current_user.name %></span>

          <!-- âœ… Correct logout (DELETE request for Devise) -->
          <%= button_to "Logout",
                destroy_user_session_path,
                method: :delete,
                class: "btn btn-outline-danger btn-sm",
                form: { class: "d-inline" },
                data: { turbo: false, confirm: "Are you sure you want to log out?" } %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary btn-sm me-2" %>
          <%= link_to "Signup", new_user_registration_path, class: "btn btn-outline-success btn-sm" %>
        <% end %>
      </div>
    </header>

    <!-- Flash messages -->
    <% flash.each do |key, message| %>
      <div class="flash <%= key.to_s == 'notice' ? 'notice' : 'alert' %>">
        <%= message %>
      </div>
    <% end %>

    <!-- Main content -->
    <%= yield %>

    <!-- Bootstrap JS (via CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
